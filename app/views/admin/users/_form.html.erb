<%= form_for(@admin, url: update_profile_admin_admin_path(@admin), html: { class: "form-horizontal"},  method: :put ) do |f| %>

<form class="form-horizontal">
  <div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Name</label>

    <div class="col-sm-10">
       <%= f.text_field :name, :class => "form-control",  placeholder: "Name"%>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail" class="col-sm-2 control-label">Email</label>

    <div class="col-sm-10">
      <%= f.text_field :email, :class => "form-control",  placeholder: "Email" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Contact</label>

    <div class="col-sm-10">
     <%= f.text_field :mobile_no, :class => "form-control",  placeholder: "Mobile no"%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-success"%>
    </div>
  </div>
<% end %>