<div class="box">
  <div class="box-header">
    <h3 class="box-title">Members</h3>
    <%= link_to 'New Member', new_member_path, style: "float: right", class: "btn btn-success btn-sm" %>
  </div>
  <div class="box-body no-padding users">
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Contact</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @members.each do |member| %>
          <tr>
            <td><%= member.name %></td>
            <td><%= member.contact %></td>
            <!-- <td><%#= link_to 'Show', member %></td> -->
            <td><%= link_to 'Edit', edit_member_path(member), class: "badge bg-green" %></td>
            <!-- <td><%#= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
