<%= form_for(@template, html: { class: 'form-horizontal'}) do |f| %>
	<div class="form-group">
    <%= f.label "Name", class: "control-label col-xs-3"%>
    <div class="col-xs-6">
      <%= f.text_field :name, :class => "form-control",  placeholder: "Enter name"%>
    </div>  
  </div>

  <div class="form-group">
    <%= label_tag "Insert Merge Field", nil, class: "control-label col-xs-3"%>
    <div class="col-xs-6">
      <%= select_tag 'template_variable_options',
              options_for_select([["Name","{name}" ], ["last_name", "{last_name}"], ["mobile", "{mobile}"]]),
              class: 'sms_template_variable_select form-control', prompt: '--- Insert Merge Field ---' %>
    </div>
      <button class="btn btn-success" onClick="appendTemplateVariableToSmsTemplate()" type="button">Add</button>
   <!--  <div class="col-sx-3">
          </div>
    </div> -->
  </div>
  
  <div class="form-group">
    <%= f.label "Text", class: "control-label col-xs-3 puu-right"%>
    <div class="col-xs-6">
      <%= f.text_area :message, :class => "form-control sms_template_content" , id: "textarea1",  placeholder: "Enter predefined SMS text"%>
      <p class="help-block">
        <span class="content_length">125</span>
        characters /
        <span class="credit_count">1</span>
        credit (approx - using variables can affect message length)
      </p>
    </div>  
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>  
  

    


  <div class = "form-group text-center">

    <%= f.submit class: "btn btn-success" %>
  </div> <br>
<% end %>


